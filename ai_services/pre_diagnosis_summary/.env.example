# Server Configuration
PORT=9004
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://mongo:mongo@localhost:27017/dr_assistant

# Google Gemini AI Configuration
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TEMPERATURE=0.2
GEMINI_TOP_P=0.8
GEMINI_TOP_K=40
GEMINI_MAX_OUTPUT_TOKENS=4096

# Authentication
JWT_SECRET=your_jwt_secret_key
AUTH_SERVICE_URL=http://localhost:8001

# Service Integration URLs
PATIENT_SERVICE_URL=http://localhost:8007
ABDM_SERVICE_URL=http://localhost:8101
USER_SERVICE_URL=http://localhost:8002

# Service Configuration
MAX_RETRIES=3
PROCESSING_TIMEOUT=60000
CONFIDENCE_THRESHOLD=0.7

# ABDM Integration
ABDM_TIMEOUT=10000
ABDM_RETRY_ATTEMPTS=3

# Patient Service
PATIENT_TIMEOUT=10000
PATIENT_RETRY_ATTEMPTS=3

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check
HEALTH_CHECK_INTERVAL=30000
