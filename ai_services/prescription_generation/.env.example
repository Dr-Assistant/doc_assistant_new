# Server Configuration
PORT=9003
ENVIRONMENT=development
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/dr_assistant

# Google Gemini Configuration
GOOGLE_GEMINI_API_KEY=test_api_key
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TEMPERATURE=0.2
GEMINI_MAX_OUTPUT_TOKENS=4096
GEMINI_TOP_P=0.8
GEMINI_TOP_K=40

# Service URLs
AUTH_SERVICE_URL=http://localhost:8001
CLINICAL_NOTE_SERVICE_URL=http://localhost:9002
PATIENT_SERVICE_URL=http://localhost:8002
ENCOUNTER_SERVICE_URL=http://localhost:8004

# Prescription Configuration
MAX_RETRIES=3
PROCESSING_TIMEOUT=30000
ENABLE_DRUG_INTERACTION_CHECK=true
ENABLE_DOSAGE_VALIDATION=true
CONFIDENCE_THRESHOLD=0.7
MAX_MEDICATIONS_PER_PRESCRIPTION=20

# Drug Database Configuration
ENABLE_EXTERNAL_DRUG_DB=false
EXTERNAL_DRUG_DB_URL=https://api.fda.gov
EXTERNAL_DRUG_DB_API_KEY=your_fda_api_key

# Security
JWT_SECRET=test_jwt_secret_key_for_development_only
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/prescription-service.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AI_GENERATION_RATE_LIMIT=10
