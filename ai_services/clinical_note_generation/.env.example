# Server Configuration
PORT=9002
ENVIRONMENT=development
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/dr_assistant

# Google Gemini Configuration
GOOGLE_GEMINI_API_KEY=test_api_key
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TEMPERATURE=0.3
GEMINI_MAX_OUTPUT_TOKENS=8192
GEMINI_TOP_P=0.8
GEMINI_TOP_K=40

# Service URLs
AUTH_SERVICE_URL=http://localhost:8001
VOICE_RECORDING_SERVICE_URL=http://localhost:8003
PATIENT_SERVICE_URL=http://localhost:8002
ENCOUNTER_SERVICE_URL=http://localhost:8004

# Clinical Note Configuration
MAX_RETRIES=3
PROCESSING_TIMEOUT=60000
ENABLE_AUTO_GENERATION=true
DEFAULT_NOTE_TYPE=soap
CONFIDENCE_THRESHOLD=0.7

# Security
JWT_SECRET=test_jwt_secret_key_for_development_only
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check
HEALTH_CHECK_INTERVAL=30000
